version: "3"
services:
  {{ inventory_hostname }}:
    build: .
    volumes:
      - .:/app
    environment:
      - MASTODON_SERVER={{ mastodon_server }}
      - MASTODON_TOKEN={{ mastodon_token }}
      - COUCHDB_IP={{ couchdb_ip }}
    networks:
      - harvester-network
networks:
  harvester-network:
    name: harvester-network-{{ inventory_hostname }}
